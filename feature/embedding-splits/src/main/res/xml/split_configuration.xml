            window:secondaryActivityName="com.android_g.egg.PlatLogoActivity" />
    </SplitPairRule>

    <!-- Specify a placeholder for the secondary container when content is
         not available. -->
    <SplitPlaceholderRule
        window:placeholderActivityName="com.dede.android_eggs.embedding_splits.PlaceholderActivity"
        window:splitMaxAspectRatioInPortrait="alwaysAllow"
        window:splitMinSmallestWidthDp="600"
        window:splitRatio="0.5"
        window:stickyPlaceholder="false">
        <ActivityFilter window:activityName="com.dede.android_eggs.views.main.EasterEggsActivity" />
    </SplitPlaceholderRule>

    <!-- Define activities that should never be part of a split. Note: Takes
         precedence over other split rules. -->
    <ActivityRule window:alwaysExpand="true">
        <ActivityFilter window:activityName="com.android_u.egg.landroid.MainActivity" />
    </ActivityRule>

</resources>