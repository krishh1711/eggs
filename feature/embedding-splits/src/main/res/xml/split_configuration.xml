<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:window="http://schemas.android.com/apk/res-auto">

    <!-- Define a split for the named activities. -->
    <SplitPairRule
        window:clearTop="true"
        window:finishPrimaryWithSecondary="never"
        window:finishSecondaryWithPrimary="always"
        window:splitLayoutDirection="locale"
        window:splitMinSmallestWidthDp="600"
        window:splitRatio="0.5">
        <SplitPairFilter
            window:primaryActivityName="com.dede.android_eggs.views.main.EasterEggsActivity"
            window:secondaryActivityName="com.android_u.egg.PlatLogoActivity" />
        <SplitPairFilter
            window:primaryActivityName="com.dede.android_eggs.views.main.EasterEggsActivity"
            window:secondaryActivityName="com.android_t.egg.PlatLogoActivity" />
